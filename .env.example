# RHEI Word Add-in Environment Variables
# Copy this file to .env and fill in your actual values

# AI/ML API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration (for local development)
DATABASE_URL=postgresql://rhei_admin:dev_password_123@localhost:5432/rhei_word_addin

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here

# CORS Configuration
ALLOWED_ORIGINS=https://word.office.com,https://word-edit.officeapps.live.com,http://localhost:3000

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Terraform Variables (alternative to terraform.tfvars)
TF_VAR_aws_region=us-east-1
TF_VAR_project_name=rhei-word-addin
TF_VAR_environment=prod
TF_VAR_domain_name=word-addin.yourcompany.com
TF_VAR_enable_backend=false
TF_VAR_enable_database=false
